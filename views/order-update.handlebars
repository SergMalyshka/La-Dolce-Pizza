<div>
  <h4>Update Order #{{orders.id}}</h4>
</div>
<div>
  <form>
    <div class="mb-3">
      <label for="order-type mb-3">Update Order type:</label>
      <select class="form-select mb-3" id="order-type">
        <option selected>Currently: {{orders.order_type}}</option>
        <option value="Delivery">Delivery</option>
        <option value="Pickup">Pickup</option>
      </select>
      <label class="mb-3" for="phone">Update Phone #:</label>
      <input type="text" id="phone" placeholder="{{orders.phone}}" />
      <br />
      <label class="mb-3" for="address">Update Address</label>
      {{#if orders.address}}
        <input type="text" id="address" placeholder="{{orders.address}}" />
      {{else}}
        <input type="text" id="address" />
      {{/if}}
      <br />
      <label class="mb-1" for="status">Update order Status:</label>
      <select class="form-select" id="status">
        <option selected>Currently: {{orders.order_status}}</option>
        <option value="Ordered">Ordered</option>
        <option value="Prepairing">Prepairing</option>
        <option value="Out for Delivery">Out for Delivery</option>
        <option value="Completed">Completed</option>
        <option value="Cancled">Cancled</option>
      </select>
      {{! delete items here }}
      <br />
      <div class="form-check mb-3">
        <label class="mb-1">Remove items:</label>

        {{#each orders.Dishes as |dish|}}
          <div>
            <input
              class="form-check-input"
              type="checkbox"
              value="{{dish.id}}"
              id="remove-check-{{dish.id}}"
            />
            <label
              class="form-check-label"
              for="remove-check-{{dish.id}}"
            >{{dish.name}}</label>
          </div>
        {{/each}}
        <button id="remove-btn" type="submit">Update Items</button>
      </div>
      <label class="mb-1">Add an item:</label>
      <div>
        {{#each menu}}
          <button type="submit" value="{{id}}, {{orders.id}}">{{name}}</button>
        {{/each}}
      </div>
      <div>
        {{! add items here }}
      </div>
      {{! think of a way to update order dishes }}
      <label class="mb-2" for="instructions">Update instructions</label>
      <input type="text" id="instructions" />
      <br />
      <label class="mb-2" for="payment-type">Update payment type:</label>
      <input
        type="text"
        id="payment-type"
        placeholder="{{orders.payment_type}}"
      />
      <br />
      <label class="mb-2" for="order-total">Update order total</label>
      <input
        type="text"
        id="order-total"
        placeholder="${{orders.order_total}}"
      />
    </div>
    <div>
      <button value="{{orders.id}}">Submit Changes</button>
    </div>
  </form>
</div>