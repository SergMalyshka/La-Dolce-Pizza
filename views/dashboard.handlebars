<div class="container">

  {{#if loggedIn}}
  <div class="header">
    <h1 class="text-center dashboardHeader">Manager Dashboard</h1>
  </div>
  <div>
    {{#if ordered}}
    <div class="dashboardContainer">
      <div>
        <h3 class="dashboardHeader">Ordered</h3>
      </div>
      {{#each ordered as |order|}}
      {{!-- <div class="card dishList" id="itemList">
        <p>Customer Phone: {{order.phone}}</p>
        <p>Order Status: {{order.order_status}}</p>
        <a href="/dashboard/{{order.id}}">Order Details</a>
      </div> --}}
      <div class="card dishList">
        <ul class="list-inline">
          <li class="list-inline-item">Customer Phone: {{order.phone}}</li>
          <li class="list-inline-item">Order Status: {{order.order_status}}</li>
          <li class="list-inline-item small"><a href="dashboard/{{order.id}}">Order Details</a></li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    {{#if preparing}}
    <div class="dashboardContainer">
      <div>
        <h3 class="dashboardHeader">Preparing</h3>
      </div>
      {{#each preparing as |order|}}
      {{!-- <div class="card dishList" id="itemList">
        <p>Customer Phone: {{order.phone}}</p>
        <p>Order Status: {{order.order_status}}</p>
        <a href="/dashboard/{{order.id}}">Order Details</a>
      </div> --}}
      <div class="card dishList">
        <ul class="list-inline">
          <li class="list-inline-item">Customer Phone: {{order.phone}}</li>
          <li class="list-inline-item">Order Status: {{order.order_status}}</li>
          <li class="list-inline-item small"><a href="dashboard/{{order.id}}">Order Details</a></li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}
    {{!-- Out for Delivery div --}}
    {{#if outForDelivery}}
    <div class="dashboardContainer">
      <div>
        <h3 class="dashboardHeader">Out for Delivery</h3>
      </div>
      {{#each outForDelivery as |order|}}
      <div class="card dishList">
        <ul class="list-inline">
          <li class="list-inline-item">Customer Phone: {{order.phone}}</li>
          <li class="list-inline-item">Order Status: {{order.order_status}}</li>
          <li class="list-inline-item small"><a href="dashboard/{{order.id}}">Order Details</a></li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    {{!-- completed div --}}
    {{#if completed}}
    <div class="dashboardContainer">
      <div>
        <h3 class="dashboardHeader">Completed</h3>
      </div>
      {{#each completed as |order|}}
      <div class="card dishList">
        <ul class="list-inline">
          <li class="list-inline-item">Customer Phone: {{order.phone}}</li>
          <li class="list-inline-item">Order Status: {{order.order_status}}</li>
          <li class="list-inline-item small"><a href="dashboard/{{order.id}}">Order Details</a></li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    {{!-- cancelled div --}}
    {{#if cancelled}}
    <div class="dashboardContainer">
      <div>
        <h3 class="dashboardHeader">Cancelled</h3>
      </div>
      {{#each cancelled as |order|}}
      <div class="card dishList">
        <ul class="list-inline">
          <li class="list-inline-item">Customer Phone: {{order.phone}}</li>
          <li class="list-inline-item">Order Status: {{order.order_status}}</li>
          <li class="list-inline-item small"><a href="dashboard/{{order.id}}">Order Details</a></li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

  </div>
  {{else}}
  <h2>You are not logged in. Click <a href="/api/login">HERE</a> to Login</h2>
  {{/if}}