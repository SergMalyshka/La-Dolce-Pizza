<div class="container">
  
  {{#if loggedIn}}
  <div class="header">
    <h1 class="text-center">Manager Dashboard</h1>
  </div>
  <div>
    <p>All orders:</p>
    <div>
      {{#each orders as |order|}}
      <p>Customer Phone: {{order.phone}}</p>
      <p>Order Status: {{order.order_status}}</p>
      <a href="/dashboard/{{order.id}}">Order Details</a>
      {{/each}}
    </div>
  </div>
  {{else}}
  <h2>You are not logged in. Click <a href="/api/login">HERE</a> to Login</h2>
  {{/if}}