<div class="container text-warning text-center">

  <div class="header shadow">
    <h1>Place an Order</h1>
  </div>

  <div class="menu_container">
    <p class="shadow">Your Cart:</p>
    {{#each cart as |cartItem|}}
      <section class="card orderList mb-3">
        <header>{{cartItem.name}}</header>
        <p>{{cartItem.price}}</p>
      </section>
    {{/each}}
  </div>
</div>
<div class="card orderList mb-3" id="total"></div>

<form class="text-center">
  <label class="shadow" for="address">Address</label>
  <input type="text" id="address" name="address" />
  <br />
  <label class="shadow" for="phone">Phone number</label>
  <input type="text" id="phone" name="phone" />
  <br />
  <label class="shadow" for="instructions">Special Instructions</label>
  <input type="text" id="instructions" name="instructions" />
  <br />
  <label class="shadow" for="type">Payment Type:</label>

  <select name="paymentType" id="paymentType">
    <option value="cash">Cash</option>
    <option value="card">Card</option>
  </select>

  <select name="orderType" id="orderType">
    <option value="Pick up">Pick Up</option>
    <option value="Delivery">Delivery</option>
  </select>
  <br />
  <button id="checkout">Complete Order</button>
  <button id="cancel-order">Cancel order</button>
</form>

<script src="js/cart.js"></script>