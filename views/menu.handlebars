<div class="container">

  <div>
    <h1 class="text-center">Menu</h1>
  </div>

  <div class="menu_container itemList">
    {{#each dishes as |dish|}}
      <section class="card text-center">
        <header>{{dish.name}}</header>
        <p>{{dish.price}}</p>
        <button
          class="add"
          data-id="{{dish.id}}"
          data-price="{{dish.price}}"
          data-name="{{dish.name}}"
        >Add to order</button>
      </section>
    {{/each}}
  </div>

</div>
<script src="/js/addToOrder.js"></script>