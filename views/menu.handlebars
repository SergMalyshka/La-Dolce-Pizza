<div class="container">

  <div>
    <h1 class="text-center shadow">Menu</h1>
  </div>

  <div class="menu_container itemList">
    {{#each dishes as |dish|}}
      <section class="card text-center">
        <header>{{dish.name}}</header>
        <p>{{dish.price}}</p>
        <button
          class="add"
          data-id="{{dish.id}}"
          data-price="{{dish.price}}"
          data-name="{{dish.name}}"
        >Add to order</button>
      </section>
    {{/each}}
  </div>

<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Item Added to Cart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <button type="button" id="successModalClose" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>


</div>
<script src="js/modalUtils.js"></script>
<script src="/js/addToOrder.js"></script>